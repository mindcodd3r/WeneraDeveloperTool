<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:padding="25dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/sans"
                    android:paddingLeft="10dp"
                    android:text="Enter your login"
                    android:textColor="@color/outline"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <com.mindcod3r.wenera.Components.EditTextIcon
                    android:id="@+id/loginForm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    app:password="false"
                    app:src="@drawable/user">

                </com.mindcod3r.wenera.Components.EditTextIcon>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/sans"
                    android:paddingLeft="10dp"
                    android:text="Enter your password"
                    android:textColor="@color/outline"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <com.mindcod3r.wenera.Components.EditTextIcon
                    android:id="@+id/passwordForm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:password="true"
                    app:src="@drawable/key">

                </com.mindcod3r.wenera.Components.EditTextIcon>

                <com.mindcod3r.wenera.Components.CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    app:title="Remember me" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="30dp">

                <com.mindcod3r.wenera.Components.Button.ButtonDefaultOutline
                    android:id="@+id/buyButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="BUY" />

                <com.mindcod3r.wenera.Components.Button.ButtonPositive
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="login" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>